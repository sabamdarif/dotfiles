{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "center",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "application",

  "control-center-width": 400,
  "control-center-height": 750,
  "control-center-margin-top": 2,
  "control-center-margin-bottom": 1,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,

  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-window-width": 380,
  "notification-icon-size": 50,
  "notification-body-image-height": 140,
  "notification-body-image-width": 180,

  "timeout": 6,
  "timeout-low": 3,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": false,

    "scripts": {
    "play-sound": {
      "exec": "~/.config/swaync/scripts/notify_sound.sh",
      "app-name": ".*",
      "run-on": "receive"
    }
  },

  "widgets": ["dnd", "mpris", "notifications", "title"],

  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": " Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "mpris": {
      "image-size": 60,
      "image-radius": 12
    }
  }
}
