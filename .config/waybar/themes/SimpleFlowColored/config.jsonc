  /////////////////////////////////
  //                             //
  //  // Waybar configuration//  //
  //                             //
  /////////////////////////////////

  {
      "layer": "top",
      "position": "top",
      "height": 38,
      "spacing": 2,
      "margin-top": 0,
      "margin-bottom": 0,
      "reload_style_on_change": true,

      /////////////////////////////////////////////
      //                                         //
      //  // Choose the order of the modules //  //
      //                                         //
      /////////////////////////////////////////////

      "modules-left": [ "custom/launcher", "niri/workspaces", "custom/chrome", "custom/terminal", "custom/code", "custom/music", "custom/thunar"],
      "modules-center": ["custom/mic-camera-usage", "wlr/taskbar", "custom/notification"],
      "modules-right": ["keyboard-state", "custom/countdown", "group/group-tools", "pulseaudio", "backlight", "tray", "clock", "group/group-network" , "group/group-battery", "group/group-power"],


      ///////////////////////////////////
      //                               //
      //  // Modules configuration//   //
      //                               //
      ///////////////////////////////////


      "wlr/taskbar":
      {
          "format": "{icon}",
          "icon-size": 20,
          "tooltip-format": "{title:.50}",
          "on-click": "minimize-raise",
          "on-click-middle": "close",
          "on-click-right": "fullscreen"
      },

      "custom/notification": {
    "tooltip": true,
    "format": "<span size='16pt'>{icon}</span>",
    "format-icons": {
      "notification": "Û±Ö´",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Ç†",
      "dnd-none": "Û∞™ì",
      "inhibited-notification": "Û∞Çõ",
      "inhibited-none": "Û∞™ë",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": "Û∞™ë"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
    },

     "custom/mic-camera-usage": {
            "return-type": "json",
            "exec": "~/.config/waybar/scripts/mic_and_camera_usage.sh",
            // "restart-interval": 5,
            // "interval": 2,
            "hide-empty-text": true
    },

      "niri/workspaces":
      {
          "format": "{icon}",
          "format-icons":
          {
              "urgent": "ÔÅ™",
              "active": "ÔÜí",
              "default": "ÔÑë"
          },
          "sort-by-number": true,
          "on-click": "activate"
      },

      "keyboard-state":
      {
          "capslock": true,
          "format": "{icon}",
          "format-icons":
          {
              "locked": "ÔÑú Caps ÔÄ£",
              "unlocked": ""
          }
      },

      "idle_inhibitor":
      {
          "format": "{icon}",
          "format-icons":
          {
              "activated": "ÔÅÆ",
              "deactivated": "ÔÅ∞"
          }
      },

      "tray":
      {
          "icon-size": 20,
          "spacing": 10
      },

      "clock":
      {
          "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
          "format-alt": "{:%d-%m-%Y}",
          "format": "{:%I:%M %p}"
      },

     "group/group-battery":
    {
        "orientation": "inherit",
        "drawer":
        {
            "transition-duration": 500,
            "children-class": "battery-items",
            "transition-left-to-right": false
        },
        "modules": [
            "battery",
            "custom/bt-battery"
        ]
    },
      "battery": {
    "interval": 2, // Poll every 2 seconds
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "{icon} {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "format-alt": "{icon}  {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": {
      "charging": ["Û∞¢ú", "Û∞Çá", "Û∞¢ù", "Û∞Çâ", "Û∞ÇÖ"],
      "default": ["Û∞Å∫", "Û∞Åº", "Û∞Åæ", "Û∞ÇÄ", "Û∞Åπ"]
    }
  },
       "custom/bt-battery": {
    "exec": "~/.config/waybar/scripts/bt-battery.sh",
    "interval": 3,
    "format": "{}",
    "tooltip": false
    },
      "backlight":
      {
          "device": "acpi_video0", // Assuming acpi_video0, adjust if needed
          "tooltip": false,
          "format": "{percent}% {icon}",
          "format-icons": ["ÔÑë", "ÔÜÖ"],
          "on-scroll-up": "brightnessctl s +5%",
          "on-scroll-down": "brightnessctl s 5%-"
      },

      "pulseaudio":
      {
          "format": "{volume}% {icon}",
          "tooltip": false,
          "format-bluetooth": "{volume}% {icon}Ôäî",
          "format-bluetooth-muted": "{icon}Ôäî {format_source}",
          "format-muted": "Û∞ùü {format_source}",
          "format-source": "ÔÑ∞",
          "format-source-muted": "ÔÑ±",
          "format-icons":
          {
              "headphone": "ÔÄ•",
              "hands-free": "ÔÄ•",
              "headset": "ÔÄ•",
              "phone": "ÔÇï",
              "portable": "ÔÇï",
              "car": "ÔÜπ",
              "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
          },
          "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
      },


      ///////////////////////////
      //                       //
      //  // Custom module //  //
      //                       //
      ///////////////////////////  

      "group/group-tools":
      {
          "orientation": "inherit",
          "drawer":
          {
              "transition-duration": 500,
              "children-class": "other-apps",
              "transition-left-to-right": false
          },
          "modules": [
              "custom/snip",
              "custom/nightlight",
              "custom/clip",
              "custom/galculator",
              "custom/taskmanager"

          ]
      },

      "group/group-network":
    {
        "orientation": "inherit",
        "drawer":
        {
            "transition-duration": 500,
            "children-class": "network-items",
            "transition-left-to-right": false
        },
        "modules": [
            "network",
            "bluetooth",
        ]
    },

    "network":
      {
    "interface": "wlp2s0", // (Optional) To force the use of this interface
    "format": "‚ö†  Disabled",
    "format-wifi": "Ôá´  {essid}",
    "format-ethernet": "ÔÉÅ  Wired",
    "format-disconnected": "‚ö†  Disconnected",
    "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´   {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
    "tooltip-format-disconnected": "‚ö†  Disconnected",
    // "on-click": "ghostty -e nmtui"
    "on-click": "~/.config/swaync/scripts/toggle_wifi.sh"
      },

       "bluetooth":
    {
        "format": "Û∞ÇØ",
        "format-disabled": "Û∞Ç≤ disabled",
        "format-off": "Û∞Ç≤ off",
        "format-connected": "Û∞Ç± {num_connections}",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "~/.config/swaync/scripts/toggle_bluetooth.sh"
    },

      ///////////////////////////
      //                       //
      //  // Apps section //   //
      //                       //
      ///////////////////////////


      "group/group-apps":
      {
          "orientation": "inherit",
          "drawer":
          {
              "transition-duration": 500,
              "children-class": "other-apps",
              "transition-left-to-right": true
          },
          "modules": [
              "custom/chrome",
              "custom/terminal",
              "custom/music",
              "custom/thunar"
          ]
      },

      "custom/launcher":
      {
          "format": "Óüô",
          "tooltip": true,
          "tooltip-format": "App Menu",
          "on-click": "~/.config/rofi/bin/app-menu",
      },

      "custom/chrome":
      {
          "format": "Û∞àπ",
          "tooltip": true,
          "tooltip-format": "Zen-Browser",
          "on-click": "flatpak run app.zen_browser.zen",
      },

      "custom/terminal":
      {
          "format": "ÔÑ†",
          "tooltip": true,
          "tooltip-format": "Terminal",
          "on-click": "ghostty",
      },

      "custom/code":
      {
          "format": "ÔçØ",
          "tooltip": true,
          "tooltip-format": "NeoVim",
          "on-click": "ghostty --fullscreen --command=nvim"
      },

      "custom/taskmanager":
      {
          "format": "ÔÇ†",
          "tooltip": true,
          "tooltip-format": "Task Manager",
          "on-click": "gnome-system-monitor"
      },

      "custom/galculator":
      {
          "format": "Û∞™ö",
          "tooltip": true,
          "tooltip-format": "Culator",
          "on-click": "gnome-calculator"
      },

      "custom/music":
      {
          "format": "Û∞éÑ",
          "tooltip": true,
          "tooltip-format": "Music",
          "on-click": "env DESKTOPINTEGRATION=1 /home/sabamdarif/AppImages/youtube_music.appimage --no-sandbox",
      },

      "custom/thunar":
      {
          "format": "ÔÅª",
          "tooltip": true,
          "tooltip-format": "File Manager",
          "on-click": "nautilus"
      },

      "custom/snip": {
          "format": "ÔÄ∞",
          "tooltip": true,
          "tooltip-format": "Screenshot",
          "on-click": "sh -c 'file=\"$HOME/Pictures/Screenshots/screenshot-$(date +%Y%m%d-%H%M%S).png\" && grim \"$file\" && notify-send -i \"$file\" \"üì∏ Screenshot saved\"'"
      },

     "custom/nightlight":
    {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/nightlight-status.sh",
        "interval": 5,
        "return-type": "json",
        "tooltip": true,
        "on-click": "~/.config/swaync/scripts/toggle_night_light.sh && pkill -RTMIN+8 waybar"
    },

      "custom/clip":
      {
          "format": "ÔÉ™",
          "tooltip": true,
          "tooltip-format": "Clipboard",
          "on-click": "~/.config/rofi/bin/clipboard_monitor"
      },


      ///////////////////////////
      //                       //
      //  // Power section //  //
      //                       //
      ///////////////////////////


      "group/group-power":
      {
          "orientation": "inherit",
          "drawer":
          {
              "transition-duration": 500,
              "children-class": "not-power",
              "transition-left-to-right": false
          },
          "modules": [
              "custom/power",
              "custom/quit",
              "custom/lock",
              "custom/reboot"
          ]
      },

      "custom/quit":
      {
          "format": "Û∞óº",
          "tooltip": true,
          "tooltip-format": "Logout",
          "on-click": "niri msg action quit"
      },

      "custom/lock":
      {
          "format": "Û∞çÅ",
          "tooltip": true,
          "tooltip-format": "Lock",
          "on-click": "hyprlock"
      },

      "custom/reboot":
      {
          "format": "Û∞úâ",
          "tooltip": true,
          "tooltip-format": "Reboot",
          "on-click": "systemctl reboot"
      },

      "custom/power":
      {
          "format": "ÔÄë",
          "tooltip": true,
          "tooltip-format": "Shutdown",
          "on-click": "systemctl poweroff"
      }
  }
